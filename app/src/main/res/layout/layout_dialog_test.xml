<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
            android:layout_margin="8dp"
            android:layout_width="36dp"
            android:id="@+id/iv_close"
            android:layout_gravity="end"
            android:src="@drawable/ic_close"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/tv_title"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="26sp"
            android:text="string/information_detail_route"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_close"/>

    <com.example.kotlinapplication.DialogRow
            app:dr_title="hihidkgashdhagsdhgasjdgahjsgdjahsgdjhadg"
            app:dr_detail="hehe"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/row_1"/>
    <com.example.kotlinapplication.DialogRow
            app:layout_constraintTop_toBottomOf="@id/row_1"
            app:dr_title="hihi"
            app:dr_detail="hehe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/row_2"/>

    <EditText
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ âăêôơưÂĂÊÔƠƯ"
            android:text="đákjahskjdhákhđkjáhjdhákjdh@đá,"
            app:layout_constraintTop_toBottomOf="@id/row_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/row_4"/>


</android.support.constraint.ConstraintLayout>